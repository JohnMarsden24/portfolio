<div class="text-container center text-black">
  <h1 class="text-dark-blue no-m pb2 page-header-mob">Contact</h1>
  <%= simple_form_for @contact, remote: true do |f| %>
    <%= f.input  :name, required: true %>
    <%= f.input :email, required: true %>
    <%= f.input :message, as: :text, rows: 4, cols: 40, required: true,cplaceholder: "Send me a message"%>
    <div class= "hidden">
      <%= f.input :nickname %>
    </div>
    <%= f.submit 'Send Message', class: 'btn btn-primary' %>
  <% end %>
  <div class="flash-message">
    <%= render "contacts/flash" %>
  </div>
</div>
