<div id="project-carousel" class="carousel slide carousel-fade" data-ride="carousel" data-slide="true">
  <div class="carousel-inner mb30" data-touch="true">
    <% @project.photos.each_with_index do |photo, index| %>
      <div class="carousel-item d-flex justify-content-center <%= @project.get_first_item(index) %>">
        <div class="carousel-slide-photo" style="background-image: url('<%= cl_image_path photo.key %>')">
        </div>
      </div>
    <% end %>
  </div>
    <ol class="carousel-indicators">
      <% @project.photos.each_with_index do |photo, index| %>
        <li data-target="#project-carousel" data-slide-to="<%= index %>" class="<%= @project.get_first_item(index) %> carousel-button"></li>
      <% end %>
    </ol>
</div>
