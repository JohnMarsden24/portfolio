<div class="navbar-spacing-medium mb120">
  <%= cl_image_tag @project.photos.second&.key, class: "project-image mb60", alt: "Project image" %>
  <div class="flex-container space-between mb60">
    <div class="width55">
      <h2 class="mb15"><%= @project.name %></h2>
      <p class="intro mb30">
        <%== @project.description %>
      </p>
      <h3 class="mb15">Project difficulties</h3>
      <p class="mb30">
        <%== @project.difficulties %>
      </p>
      <h3 class="mb15">Project solution</h3>
      <p class="mb30">
        <%== @project.solution %>
      </p>
    </div>
    <div class="width30 mt15-0">
      <div class="mb30">
        <h4 class="mb15">Languages used</h4>
        <ul class="grid-container-list no-m">
          <% @project.technologies.each do |technology| %>
            <li class="project-list-item">
              <%= technology %>
            </li>
          <% end %>
        </ul>
      </div>
      <h4 class="mb15">Project features</h4>
      <ul class="grid-container-list no-m">
        <% @project.features.each do |feature| %>
          <li class="project-list-item">
            <%= feature %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="grid-container-links width55 mb60">
    <div class="project-link">
      <%= image_tag "github.svg", class: "link-image", alt: "Github logo" %>
      <%= link_to "View source", @project.github, target: "_blank" %>
    </div>
    <div class="project-link">
      <%= image_tag "screen.svg", class: "link-image", alt: "Computer screen logo" %>
      <%= link_to "View site", @project.url, target: "_blank"  %>
    </div>
    <% if @next.present? %>
      <div class="project-link link-more-container">
        <%= link_to "View next project", project_path(@next.slug), class: "link-more" %>
        <%= image_tag "next-arrow.svg", alt: "Arrow logo" %>
      </div>
    <% else %>
      <div class="project-link link-more-container back-link">
        <%= image_tag "back-arrow.svg", alt: "Back logo" %>
        <%= link_to "Back to projects", projects_path, class: "link-more" %>
      </div>
    <% end %>
  </div>
</div>
