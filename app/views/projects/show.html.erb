<div class="page-container">

  <%= render "projects/carousel" %>

  <div class="project-text-container center off-black">
    <div class="d-flex justify-content-between align-items-center flex-wrap mtb2">
    <h2 class="bold pr2"><%= @project.name %></h2>
    <div>
      <%= link_to "<i class='fas fa-desktop'></i> Visit site".html_safe , @project.url, class: "mr1 no-d" %>
      <%= link_to "<i class='fab fa-github'></i> View source".html_safe, @project.github, class: "no-d" %>
    </div>

    </div>
    <p class="taj">
      <%= @project.description %>
    </p>
    <div class="row">
      <div class="col-md-8 taj">
        <h4 class="bolder">Project difficulties</h4>
        <p>
          <%= @project.difficulties %>
        </p>
        <h4 class="bolder">Project solution</h4>
        <p>
          <%= @project.solution %>
        </p>
      </div>
      <div class="col-12 col-md-4">
          <h4 class="bolder">Technology used</h4>
        <ul>
          <% @project.technologies.each do |technology| %>
            <li>
              <%= technology %>
            </li>
          <% end %>
        </ul>
        <h4 class="bolder">Project features</h4>
        <ul>
          <% @project.features.each do |feature| %>
            <li>
              <%= feature %>
            </li>
          <% end %>
        </ul>
      </div>

    </div>
    <%= link_to "Back to projects", root_path, class: "no-d"  %>

  </div>


</div>

