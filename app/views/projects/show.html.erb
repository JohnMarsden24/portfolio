<div class="show-container">
  <%= render "projects/carousel" %>
  <div class="grid-container-text">
    <div class="project-text-left">
      <h2 class="mb15"><%= @project.name %></h2>
      <p class="intro mb30">
        <%== @project.description %>
      </p>
      <h3 class="mb15">Project difficulties</h3>
      <p class="mb30">
        <%== @project.difficulties %>
      </p>
      <h3 class="mb15">Project solution</h3>
      <p class="no-m">
        <%== @project.solution %>
      </p>
    </div>
    <div class="project-text-right">
      <div class="mb30">
        <h4 class="mb15">Languages used</h4>
        <ul class="project-list">
          <% @project.technologies.each do |technology| %>
            <li class="project-list-item">
              <%= technology %>
            </li>
          <% end %>
        </ul>
      </div>
      <h4 class="mb15">Project features</h4>
      <ul class="project-list no-m">
        <% @project.features.each do |feature| %>
          <li class="project-list-item">
            <%= feature %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="project-links project-show-links">
    <div class="project-link mr30">
      <%= image_tag "github.svg", class: "link-image", alt: "Github logo" %>
      <%= link_to "View source", @project.github, target: "_blank" %>
    </div>
    <div class="project-link">
      <%= image_tag "screen.svg", class: "link-image", alt: "Computer screen logo" %>
      <%= link_to "View site", @project.url, target: "_blank"  %>
    </div>
    <% if @next.present? %>
      <div class="project-link next-link">
        <%= link_to "View next project", project_path(@next.slug) %>
        <%= image_tag "next-arrow.svg", class: "next-arrow", alt: "Arrow logo" %>
      </div>
    <% else %>
      <div class="project-link back-link">
        <%= image_tag "back-arrow.svg", class: "back-arrow", alt: "Back logo" %>
        <%= link_to "Back to projects", projects_path %>
      </div>
    <% end %>
  </div>
</div>
